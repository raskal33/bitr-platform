{
  "name": "bitredict-backend",
  "version": "1.0.0",
  "description": "Bitredict Backend Services",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon api/server.js",
    "indexer": "node indexer.js",
    "indexer:oddyssey": "node indexer_oddyssey.js",
    "indexer:reputation": "node indexer_reputation.js",
    "airdrop-indexer": "node indexer_airdrop.js",
    "oracle": "node oracle/server.js",
    "oracle-cron": "node oracle/cronjob.js",
    "evaluator": "node evaluator/index.js",
    "fixtures-scheduler": "node cron/fixtures-scheduler.js",
    "db:setup": "node db/setup.js",
    "db:seed": "node db/seed.js",
    "analytics:setup": "node db/analytics-setup.js",
    "abi:validate": "node scripts/validate-oddyssey-abi.js",
    "audit:schema:quick": "node scripts/quick-schema-audit.js",
    "audit:schema:full": "node scripts/run-schema-audit.js",
    "oddyssey:fix": "node scripts/fix-oddyssey-integration.js",
    "cycles:detect": "node scripts/detect-missing-cycles.js",
    "cycles:health": "node scripts/cycle-health-monitor.js",
    "cycles:fix": "node scripts/fix-cycle-creation-bug.js",
    "cycles:monitor": "node services/cycle-monitor.js",
    "cycles:test": "node scripts/test-cycle-monitor.js",
    "deploy:verify": "node scripts/verify-deployment.js",
    "fixtures:setup": "node scripts/setup-fixtures.js setup",
    "fixtures:refresh": "node scripts/setup-fixtures.js refresh",
    "fixtures:status": "node scripts/setup-fixtures.js status",
    "crypto:setup": "node scripts/setup-crypto.js setup",
    "crypto:scheduler": "node cron/crypto-scheduler.js",
    "crypto:oracle": "node services/crypto-oracle-bot.js",
    "crypto:status": "node scripts/setup-crypto.js status",
    "all-services": "concurrently \"npm run start\" \"npm run indexer\" \"npm run indexer:oddyssey\" \"npm run indexer:reputation\" \"npm run airdrop-indexer\" \"npm run oracle-cron\" \"npm run evaluator\" \"npm run fixtures-scheduler\" \"npm run crypto:scheduler\"",
    "health:init": "node scripts/initialize-health-monitoring.js",
    "health:check": "curl -s http://localhost:3000/api/health | jq",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postdeploy": "node sync-contract-matches-to-db.js",
    "lint": "eslint .",
    "indexer:enhanced": "node indexer.js",
    "indexer:test": "node -e \"const RpcManager = require('./utils/rpc-manager'); const rm = new RpcManager(); rm.getBlockNumber().then(b => console.log('Block:', b)).catch(console.error);\"",
    "indexer:status": "node -e \"const RpcManager = require('./utils/rpc-manager'); const rm = new RpcManager(); rm.logStatus();\""
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "^6.8.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^6.13.0"
  },
  "keywords": [
    "prediction-market",
    "blockchain",
    "api",
    "crypto",
    "coinpaprika"
  ],
  "author": "Bitredict Team",
  "license": "MIT"
}